{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}

    <h1>Book index</h1>
    <h2><a href="/">Back to Home Page</a></h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>AuthorId</th>
                <th>CoverPicture</th>
                <th>Isbn</th>
                <th>CreationDate</th>
                <th>Tags</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.coverPicture }}</td>
                <td>{{ book.isbn }}</td>
                <td>{{ book.creationDate ? book.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ book.tags ? book.tags|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
{% endblock %}
